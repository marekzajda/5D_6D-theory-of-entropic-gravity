(* 6D Ricci tensor calculation *)
metric6D = {
  {Exp[-2 k Abs[y]] g[x][μ, ν], 0, 0},
  {0, 1, 0},
  {0, 0, Exp[2 ϕ[z]]}
};
ricci6D = RicciTensor[metric6D, {x, y, z}];
